/* pages/home/extension/extension.wxss */
page{
  background-color: #fff;
}

.pd20{
  padding: 20rpx
}

.header {
  height: 340rpx;
  box-shadow: 0px 0px 20px 0px rgba(0, 0, 0, 0.07);
  border-radius: 20rpx;
  background: rgba(255, 255, 255, 1);
  padding-top: 40rpx;
}

.grey_f {
  color: #bfbfbf;
  font-size: 24rpx;
  line-height: 50rpx;
}
.header .money {
  color: #4ea9f9;
  font-size: 40rpx;
}
.header .all_money {
  color: #4ea9f9;
  font-size: 100rpx;
  font-weight: 200;
}
.header .padding_tb {
  padding: 40rpx 0 10rpx 0;
}
.header .all_img {
  width: 40rpx;
  height: 60rpx;
}
.header .yuan_img {
  width: 16rpx;
  height: 24rpx;
}

.box {
  padding-left: 20rpx;
  padding-right: 20rpx;
}
.tg_yq_box {
  height: 160rpx;
  background: rgba(255, 255, 255, 1);
  box-shadow: 0px 0px 20px 0px rgba(0, 0, 0, 0.07);
  border-radius: 20rpx;
}
.tg_yq {
  display: flex;
  align-items: center;
  height: 160rpx;
}
.wode{
  width: 170rpx;
  height: 160rpx;
  background: linear-gradient(0deg, #a1c4fd, #bbe5f9);
  border-top-left-radius: 10rpx;
  border-bottom-left-radius: 10rpx;
  font-size: 0;
}
.wode > image {
  width: 48rpx;
  height: 48rpx;
}
.img_r {
  width: 20rpx;
  height: 20rpx;
  margin-right: 24rpx;
}

.sharebtn{
  width: 100%;
  height: 100%;
  position: absolute;
  top: 0;
  left: 0;
  opacity: 0;
}

/* QRcode */
.code {
  position: fixed;
  top: 0;
  left: 0;
  width: 100%;
  background-color: rgba(0, 0, 0, 0.5);
  z-index: 100;
  height: 100vh;
}
.code .main {
  position: fixed;
  bottom: 0;
  left: 0;
  width: 100%;
}
.codeimg {
  width: 360rpx;
  height: 360rpx;
  margin-bottom:40rpx;
}
.closeimg {
  width: 68rpx;
  height: 68rpx;
  position: absolute;
  right: 40rpx;
  top: 200rpx;
}
