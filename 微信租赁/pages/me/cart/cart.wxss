/* pages/me/cart/cart.wxss */
page{
  overflow: hidden
}
.height {
  height: 100rpx;
}
.bottom {
  height: 100rpx;
  position: fixed;
  bottom: 0;
  left: 0;
  width: 100%;
}
.bottom .right {
  background-image: linear-gradient(90deg, #2dbbf1 0%, #4ea9f9 100%);
  width: 280rpx;
  color: #fff;
  height: 100%;
}


.card {
  padding: 20rpx 0;
  padding-left: 20rpx;
  margin: 20rpx 0rpx;
  overflow: hidden;
  border-radius: 10rpx;
}
.card image {
  width: 172rpx;
  height: 172rpx;
  margin-right: 20rpx;
  margin-left: 20rpx;
}

.del {
  background-color: red;
  color: #fff;
  width: 50px;
  height: 100%;
}
