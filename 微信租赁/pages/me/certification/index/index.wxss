/* pages/me/certification/index/index.wxss */
page{
  background-color: #fff
}

.box {
  height: 280rpx;
  background-image: linear-gradient(90deg, #5f99fd 0%, #2974f1 100%);
  border-radius: 10rpx;
  color: #fff;
}

.box > view:nth-of-type(1) {
  padding-top: 60rpx;
}
.box > view:nth-of-type(2) {
  font-size: 60rpx;
  padding-top: 20rpx;
}

.icon-right {
  width: 20rpx;
  height: 20rpx;
  margin-left: 20rpx;
  margin-right: 20rpx;
}
button {
  position: relative;
  display: block;
  margin-left: auto;
  margin-right: auto;
  padding-left: 0px;
  padding-right: 0px;
  box-sizing: border-box;
  text-align: center;
  text-decoration: none;
  line-height: 50rpx;
  border-radius: 5px;
  -webkit-tap-highlight-color: transparent;
  overflow: hidden;
  background-color: #fff;
}

button::after {
  content: none;
  width: 200%;
  height: 200%;
  position: absolute;
  top: 0;
  left: 0;
  border: none;
  -webkit-transform: scale(0.5);
  transform: scale(0.5);
  -webkit-transform-origin: 0 0;
  transform-origin: 0 0;
  box-sizing: border-box;
  border-radius: 10px;
}
.share{
  font-size:28rpx;
}