.home-bottom {
  background: #fff;
  /* margin-bottom: 100rpx; */
}

.home-bottom-title {
  font-size: 30rpx;
  border-top: 1rpx solid #f1f1f1;
  border-bottom: 1rpx solid #f1f1f1;
  /* padding: 20rpx 0; */
  height: 44px;
}

.home-bottom-scroll {
  height: 100%;
}

.home-bottom-hg {
  height: 100%;
  position: relative;
}

.home-bottom-left {
  webkit-flex: 0 0 20%;
  flex: 0 0 20%;
  text-align: center;
  font-size: 28rpx;
  color: #7d7e80;
}

.line-bottom {
  z-index: 1;
  left: 0;
  bottom: 0;
  height: 2px;
  position: absolute;
  background-color: #f44;
  border-radius: 2px;
}

.active {
  color: #000;
}

.flex-row {
  display: -webkit-box;
  display: -webkit-flex;
  display: flex;
  -webkit-box-orient: horizontal;
  -webkit-flex-direction: row;
  flex-direction: row;
}

.flex-grow-1 {
  min-width: 0;
  -webkit-box-flex: 1;
  -webkit-flex-grow: 1;
  -ms-flex-positive: 1;
  flex-grow: 1;
  -webkit-flex-shrink: 1;
  -ms-flex-negative: 1;
  flex-shrink: 1;
}

.flex-x-center {
  display: -webkit-box;
  display: -webkit-flex;
  display: flex;
  -webkit-box-pack: center;
  -webkit-justify-content: center;
  -ms-flex-pack: center;
  justify-content: center;
}

.flex-y-center {
  display: -webkit-box;
  display: -webkit-flex;
  display: flex;
  -webkit-box-align: center;
  -webkit-align-items: center;
  -ms-flex-align: center;
  -ms-grid-row-align: center;
  align-items: center;
}

.ellipsis {
  text-overflow: ellipsis;
  white-space: nowrap;
}
