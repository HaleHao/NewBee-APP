page{
  padding-bottom: 92rpx;
}

.btn button{
  color: #fff;
  border:0;
  border-radius: 60rpx;
}

.item {
    width: 50%;
    box-sizing: border-box;
    margin-bottom: 20rpx;
}

.am-stepper-input{
  background-color: #F6F6F6;
  height: 70rpx;
}


.adding {
  width: 175rpx;
  height: 48rpx;
  background: rgba(255, 255, 255, 1);
  border: 1rpx solid rgba(225, 225, 225, 1);
  border-radius: 10rpx;
  margin-right: 45rpx;
}

.addinput {
  width: 75rpx;
  text-align: center;
  font-size: 24rpx;
}

.addinput input {
height: 100%;
padding: 0;
background: none;
}



.add_common {
  width: 50rpx;
  height: 100%;
  text-align: center;
  line-height: 48rpx;
}

.addleft {
  border-right: 1rpx solid rgba(225, 225, 225, 1);
}

.addright {
  border-left: 1rpx solid rgba(225, 225, 225, 1);
}
