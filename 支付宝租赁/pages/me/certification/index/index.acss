page{
  padding-bottom: 92rpx;
  background-color: #fff
}

.box {
  height: 280rpx;
  background-image: linear-gradient(90deg, #5f99fd 0%, #2974f1 100%);
  border-radius: 10rpx;
  color: #fff;
}

.box > view:nth-of-type(1) {
  padding-top: 60rpx;
}
.box > view:nth-of-type(2) {
  font-size: 60rpx;
  padding-top: 20rpx;
}

.icon-right {
  width: 20rpx;
  height: 20rpx;
  margin-left: 20rpx;
  margin-right: 20rpx;
}
.share{
  font-size: 28rpx;
  
